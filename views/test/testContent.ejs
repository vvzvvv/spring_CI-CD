                }
                else{
                    return data;
                }
            })
            .catch((error) => {
                console.error('Error:', error);
            });

            row.then((data) => {
                console.log('Response in final then:', data.data);
                window.location.href = `/test/${data.data.test_id}`;
            });

            let resultData;
            if(questionScore<=4) resultData = result[0];
